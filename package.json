{
  "name": "qbitmc",
  "version": "3.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host=0.0.0.0",
    "start:ios": "ionic capacitor run ios -l --external",
    "start:android": "ionic capacitor run android -l --host=192.168.0.51",
    "build": "NODE_ENV=prod node secrets.mjs && ng build --localize",
    "build:test": "NODE_ENV=test node secrets.mjs && ng build --localize",
    "build:watch": "ng build --watch --localize --configuration development",
    "sync": "npm run sync:android & npm run sync:ios",
    "sync:android": "cap sync android",
    "sync:ios": "cap sync ios",
    "copy": "npm run copy:android & npm run copy:ios",
    "copy:android": "cap copy android",
    "copy:ios": "cap copy ios",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "ng e2e",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.2",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^21.0.2",
    "@angular/compiler": "^21.0.2",
    "@angular/core": "^21.0.2",
    "@angular/forms": "^21.0.2",
    "@angular/platform-browser": "^21.0.2",
    "@angular/platform-browser-dynamic": "^21.0.2",
    "@angular/router": "^21.0.2",
    "@capacitor/screen-orientation": "^7.0.0",
    "@ionic/angular": "^8.4.3",
    "@ngrx/effects": "^20.1.0",
    "@ngrx/entity": "^20.1.0",
    "@ngrx/eslint-plugin": "^20.1.0",
    "@ngrx/operators": "^20.1.0",
    "@ngrx/router-store": "^20.1.0",
    "@ngrx/store": "^20.1.0",
    "@ngrx/store-devtools": "^20.1.0",
    "appwrite": "^17.0.0",
    "lottie-web": "^5.12.2",
    "ngx-lottie": "^13.0.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.0.1",
    "@angular-eslint/eslint-plugin": "21.0.1",
    "@angular-eslint/eslint-plugin-template": "21.0.1",
    "@angular-eslint/schematics": "21.0.1",
    "@angular-eslint/template-parser": "21.0.1",
    "@angular/build": "^21.0.1",
    "@angular/cli": "~21.0.1",
    "@angular/compiler-cli": "^21.0.2",
    "@angular/localize": "^21.0.2",
    "@ionic/angular-toolkit": "^12.1.1",
    "@ngrx/schematics": "^20.1.0",
    "@types/jasmine": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@typescript-eslint/utils": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^48.11.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^9.0.11",
    "jasmine-core": "^5.1.2",
